[Unit]
Description=Prometheus RabbitMQ Exporter
After=network.target

[Service]
Type=simple
User=node_exporter
Group=node_exporter
ExecStart=/usr/local/bin/rabbitmq_exporter
SyslogIdentifier=prometheus_rabbitmq_exporter
Restart=always
{% for flag, value in prometheus_rabbitmq_exporter_config_flags.iteritems() %}
Environment={%filter upper %}{{flag}}{% endfilter %}={{value}}
{% endfor %}

[Install]
WantedBy=multi-user.target